@model IEnumerable<TaskMind.Domain.Models.Task>

@{
    ViewData["Title"] = "All Tasks";
}

<div class="container mt-4">
    <h1 class="mb-4">All Tasks</h1>

    <p class="d-flex align-items-center mb-3">
        <a asp-action="Create" class="btn btn-success me-3">Create New Task</a>

        <form asp-action="Index" method="get" class="d-inline-flex align-items-center">
            <select name="tagId" class="form-select me-2">
                <option value="">-- Filter by Tag --</option>
                @foreach (var tag in ViewBag.Tags as List<TaskMind.Domain.Models.Tag>)
                {
                    if (ViewBag.FilterTagId != null && ViewBag.FilterTagId == tag.Id)
                    {
                        <option value="@tag.Id" selected>@tag.Name</option>
                    }
                    else
                    {
                        <option value="@tag.Id">@tag.Name</option>
                    }
                }
            </select>
            <button type="submit" class="btn btn-primary btn-sm">Filter</button>
        </form>

    @if(ViewBag.FilterTag != null)
    {
        <p>Filtered by tag: <strong>@ViewBag.FilterTag</strong></p>
    }

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Due Date</th>
                <th>Project</th>
                <th>Assigned User</th>
                <th>Tags</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.Status</td>
                    <td>@item.DueDate?.ToString("yyyy-MM-dd")</td>
                    <td>@(ViewBag.Projects[item.Projectid] ?? "No Project")</td>
                    <td>
                        @(item.AssignedUserId != null && ViewBag.Users.ContainsKey(item.AssignedUserId)
                            ? ViewBag.Users[item.AssignedUserId]
                            : "Unassigned")
                    </td>
                    <td>
                        @foreach(var tag in item.Tags ?? new List<TaskMind.Domain.Models.Tag>())
                        {
                            <span class="badge bg-secondary me-1">@tag.Name</span>
                        }
                    </td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
