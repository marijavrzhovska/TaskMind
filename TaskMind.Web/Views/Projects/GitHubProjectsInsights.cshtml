@model List<TaskMind.Domain.Dto.ProjectInsight>

<h2 class="mb-4 text-primary">GitHub Project Insights</h2>

@if (ViewBag.CurrentRole == "Admin" || ViewBag.CurrentRole == "ProjectManager")
{
    <form asp-action="ViewGitHubInsights" method="get" class="mb-4 d-flex gap-2">
        <input type="text" name="username" placeholder="Enter GitHub username" class="form-control w-auto" />
        <button type="submit" class="btn btn-success">Fetch Insights</button>
    </form>
}
else
{
    <form class="mb-4 d-flex gap-2">
        <input type="text" class="form-control w-auto" placeholder="Enter GitHub username" disabled />
        <button type="submit" class="btn btn-success" disabled>Fetch Insights (Admin only)</button>
    </form>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle-fill me-2"></i>
        No GitHub insights available. Please provide a username to fetch insights.
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Active (last 30 days)</th>
                    <th>Complexity</th>
                    <th>Days Since Last Update</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var proj in Model)
                {
                    <tr>
                        <td>@proj.Title</td>
                        <td>@proj.Description</td>
                        <td>
                            @if (proj.IsActive)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>
                            @switch (proj.Complexity)
                            {
                                case "Low":
                                    <span class="badge bg-info text-dark">@proj.Complexity</span>
                                    break;
                                case "Medium":
                                    <span class="badge bg-warning text-dark">@proj.Complexity</span>
                                    break;
                                case "High":
                                    <span class="badge bg-danger">@proj.Complexity</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@proj.Complexity</span>
                                    break;
                            }
                        </td>
                        <td>@proj.DaysSinceUpdate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
