@model TaskMind.Domain.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<div class="container mt-4">
    <h1 class="mb-4">Project Details</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Deadline</dt>
                <dd class="col-sm-9">
                    @(Model.Deadline.HasValue? Model.Deadline.Value.ToString("dd/MM/yyyy") : "-")
                </dd>

                <dt class="col-sm-3">Owner</dt>
                <dd class="col-sm-9">
                    @(Model.Owner != null ? $"{Model.Owner.FirstName} {Model.Owner.LastName}" : "No Owner")
                </dd>

                <dt class="col-sm-3">Number of Tasks</dt>
                <dd class="col-sm-9">@(Model.Tasks?.Count ?? 0)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Project</a>
        <a asp-action="Index" class="btn btn-secondary">Back to Projects</a>
    </div>
</div>
