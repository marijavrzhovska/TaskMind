@{
    ViewData["Title"] = "Welcome";
}

<div class="container mt-5">
    <div class="text-center p-5 bg-light rounded shadow">
        <h1 class="display-3 mb-3">Welcome to TaskMind!</h1>
        <p class="lead mb-4">
            Manage your projects, tasks, and collaborations effortlessly.
        </p>
        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Projects" asp-action="Index" class="btn btn-primary btn-lg">
                My Projects
            </a>
            <a asp-controller="Tasks" asp-action="Index" class="btn btn-outline-primary btn-lg">
                All Tasks
            </a>
        </div>
        <hr class="my-4">
        <p>
            marijavrzhovska@hotmail.com
        </p>
    </div>

    <div class="row mt-5">
        <div class="col-md-4 text-center">
            <i class="bi bi-clipboard-check display-1 text-primary"></i>
            <h3 class="mt-3">Organize Tasks</h3>
            <p>Easily create, update, and track all your tasks in one place.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-people display-1 text-success"></i>
            <h3 class="mt-3">Collaborate</h3>
            <p>Assign tasks, comment, and work together with your team.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-tags display-1 text-warning"></i>
            <h3 class="mt-3">Categorize</h3>
            <p>Use tags to organize tasks and projects for faster tracking.</p>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
